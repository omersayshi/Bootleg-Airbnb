      <div class="col-lg-3">
        <h4 class="my-4">Select property:</h4>
        <div class="list-group">
          <% for(var property of properties) { %>
            <a href="/user/booknow/<%=property.property_id%>" class="list-group-item"><%=property.property_name%></a>
            <% } %>  
        </div>
      </div>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9">

        <div class="card mt-4">
          <div class="card-body">
            <%if (rec != 0) { %>
            <h3 class="card-title">Property: <%=load[0].property_name%></h3>
            <!-- <p class="card-text">Address:/p> -->
                
                <form action="/user/book/<%=load[0].property_id%>" method="POST">
                    <div class="form-group">
                        <label for="First Name">Start date (YYYY-MM-DD)</label>
                        <input class="form-control" name="start_date" style="width: 20ch" maxlength="20">
                    </div>
        
                    <div class="form-group">
                        <label for="Last Name">End date (YYYY-MM-DD)</label>
                        <input class="form-control" name="end_date" style="width: 20ch" maxlength="20">
                    </div>
        
                    <div class="form-group">
                        <label for="sel1">Select Payment Type:</label>
                        <select class="form-group" name="Acc">
                            <option>visa</option>
                            <option>mastercard</option>
                            <option>interac</option>
                        </select>
                    </div>
        
                    <div class="form-group">
                        <label for="Email">Card number</label>
                        <input class="form-control" name="card_number" style="width: 50ch" maxlength="30">
                    </div>
                    <!--Other fields-->
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                <% } %>
          </div>
        </div>
